---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li>
  <a href={href}>
    <h2>
      {title}
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>

<style>
  li {
    display: block;
    margin: 0;
    padding: 8px 16px;
    border: 2px solid white;
  }
</style>